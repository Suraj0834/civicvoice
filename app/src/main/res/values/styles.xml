<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CustomDialogTheme" parent="Theme.Material3.Light.Dialog">
        <item name="android:windowBackground">@drawable/dialog_card_background</item>
        <item name="android:windowElevation">8dp</item>
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
    </style>

    <style name="ShapeAppearanceOverlay.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.Material3.Chip" parent="">
        <item name="android:checkable">true</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelLarge</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipCornerRadius">8dp</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
        <item name="chipMinHeight">32dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipEndPadding">16dp</item>
        <item name="chipIconSize">18dp</item>
        <item name="chipIconTint">?attr/colorOnSurface</item>
        <item name="rippleColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.Material3.Button.Text" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">36dp</item>
    </style>

    <style name="Widget.Material3.Chip.Assist" parent="Widget.Material3.Chip">
        <item name="chipMinHeight">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelSmall</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipIconSize">16dp</item>
    </style>

    <style name="Widget.Material3.Chip.Filter" parent="Widget.Material3.Chip">
        <item name="chipMinHeight">24dp</item>
        <item name="android:textAppearance">?attr/textAppearanceLabelSmall</item>
        <item name="chipStartPadding">8dp</item>
        <item name="chipEndPadding">8dp</item>
        <item name="chipIconSize">16dp</item>
    </style>

    <style name="Widget.Material3.Chip.Input" parent="Widget.Material3.Chip">
        <item name="chipBackgroundColor">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="closeIconTint">?attr/colorOnSecondaryContainer</item>
    </style>

    <style name="TabTextAppearance.White" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Material3.LabelMedium">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ShapeAppearanceOverlay.Fab" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/gradient_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TextAppearance.App.Title" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ShapeAppearance.RoundedCorner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="AppToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@drawable/gradient_background1</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="cornerRadius">24dp</item>
        <item name="elevation">4dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.Button</item>
    </style>

    <style name="TextAppearance.Material3.Button" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Material3.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="Widget.App.Chip.Metadata" parent="Widget.Material3.Chip.Assist">
        <item name="android:textAppearance">?attr/textAppearanceLabelMedium</item>
        <item name="chipBackgroundColor">?attr/colorSurfaceVariant</item>
        <item name="chipStrokeColor">?attr/colorOutline</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipIconTint">?attr/colorPrimary</item>
        <item name="chipStartPadding">12dp</item>
        <item name="chipEndPadding">12dp</item>
    </style>

    <style name="TabLayout.Carousel" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@android:color/transparent</item>
        <item name="tabBackground">@drawable/carousel_indicator_selector</item>
        <item name="tabMinWidth">8dp</item>
        <item name="tabPaddingStart">4dp</item>
        <item name="tabPaddingEnd">4dp</item>
    </style>

    <style name="Widget.Material3.Button.Outlined" parent="Widget.Material3.Button">
        <item name="backgroundTint">@null</item>
        <item name="strokeColor">?attr/colorPrimary</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="iconTint">?attr/colorPrimary</item>
        <item name="rippleColor">?attr/colorPrimary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.Material3.Button.FilledTonal" parent="Widget.Material3.Button">
        <item name="backgroundTint">?attr/colorSecondaryContainer</item>
        <item name="android:textColor">?attr/colorOnSecondaryContainer</item>
        <item name="iconTint">?attr/colorOnSecondaryContainer</item>
        <item name="rippleColor">?attr/colorOnSecondaryContainer</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">64dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAppearance">?attr/textAppearanceButton</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="InputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">@color/textColorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.Body1</item>
    </style>

    <style name="ErrorButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/colorError</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.Button</item>
    </style>
</resources>